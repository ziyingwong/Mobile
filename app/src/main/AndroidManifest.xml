<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.mobile">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"

            android:usesCleartextTraffic="true">
        <activity android:name=".General_Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".Admin_Main"
                android:windowSoftInputMode="adjustPan"></activity>
        <activity
                android:name=".User_Main"
                android:windowSoftInputMode="adjustPan"></activity>

        <activity android:name=".User_SignUp"></activity>
        <activity
                android:name=".General_ViewScene"
                android:screenOrientation="landscape"></activity>
        <activity android:name=".Admin_ManageGroupDetailsPage"
                android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Admin_ManageUserDetailsPage"
                android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Admin_ManagePlayGroupDetailsPage"
                android:windowSoftInputMode="adjustPan"></activity>
        <activity
                android:name=".General_PlayScenes"
                android:screenOrientation="landscape"></activity>
        <activity
                android:name=".User_PlayGroupDetailsPage"
                android:windowSoftInputMode="adjustPan"></activity>
        <activity
                android:name=".User_GroupDetailsPage"
                android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>