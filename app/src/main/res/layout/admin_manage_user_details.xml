<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="User 1"
            android:layout_weight="0.8"
            android:textSize="36dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/idText"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="Group List"
            android:layout_weight="0.3"
            android:textSize="24dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview"/>

    <LinearLayout android:layout_width="350dp"
                  android:layout_height="0dp"
                  android:background="@drawable/login_container_manager_user"
                  android:layout_gravity="center"
                  android:layout_weight="4"
                  android:backgroundTint="@color/login_background"
                  android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                android:id="@+id/groupRecycler"
                                                android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <Button android:layout_width="350dp"
            android:layout_weight="0.8"
            android:id="@+id/groupButton"
            android:background="@color/button_update"
            android:text="UPDATE"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"
            android:layout_height="1dp"/>

    <TextView
            android:text="Play Group List"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="@color/header"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textview2"/>
    <LinearLayout android:layout_width="350dp" android:layout_height="0dp"
                  android:layout_gravity="center"
                  android:layout_weight="4"
                  android:background="@drawable/login_container_manager_user"
                  android:backgroundTint="@color/login_background"
                  android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                android:id="@+id/playGroupRecycler"
                                                android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>>
    </LinearLayout>
    <Button android:layout_width="350dp"
            android:layout_weight="0.8"
            android:id="@+id/playGroupButon"
            android:background="@color/button_update"
            android:text="UPDATE"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="20dp"
            android:layout_height="1dp"/>

</LinearLayout>

