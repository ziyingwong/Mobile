<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Admin_Centre_Main">

    <FrameLayout android:layout_width="match_parent"
                 android:id="@+id/admin_fragment_container"
                 android:layout_above="@+id/admin_bottom_navigation"
                 android:layout_height="match_parent"></FrameLayout>
    
    
    <com.google.android.material.bottomnavigation.BottomNavigationView android:layout_width="match_parent"
                                                        android:id="@+id/admin_bottom_navigation"
                                                        android:layout_alignParentBottom="true"
                                                        app:menu="@menu/bottom_navigation"
                                                        android:background="?android:attr/windowBackground"
                                                                       android:layout_height="wrap_content"></com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>